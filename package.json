{
  "name": "swapchain",
  "version": "0.0.1",
  "description": "Swapchain is an application for performing ACCS (atomic cross chain swaps) via HTLCs (hash-time-locked contracts).",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc -p ./tsconfig.prod.json --pretty",
    "docker:build": "make -C ./build build",
    "docker:up": "make -C ./build up",
    "docs:build": "./node_modules/.bin/typedoc && cd docs && npm run && npm run build",
    "docs:show": "./node_modules/.bin/typedoc && cd docs && npm run start",
    "eslint": "./node_modules/.bin/eslint --fix --ext .ts ./",
    "fmt": "npm run lint && npm run prettier",
    "lint:docker": "docker run --rm -i hadolint/hadolint < ./build/Dockerfile.build && docker run --rm -i hadolint/hadolint < ./build/Dockerfile.service && docker run --rm -i hadolint/hadolint < ./srv/bcoin/Dockerfile",
    "lint": "npm run lint:docker && npm run eslint",
    "prettier": "./node_modules/.bin/prettier --write ./**/*.{js,ts,json} --loglevel warn",
    "test": "./node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chronark/swapchain.git"
  },
  "keywords": [
    "blockchain",
    "htlc",
    "accs"
  ],
  "author": "David Joab, Fehn Katharina, Jordt Mads, Kohler Kevin, Koustas Spyridon, Steffener Julia, Thomas Andreas, Webersinke Nicolas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chronark/swapchain/issues"
  },
  "homepage": "https://github.com/chronark/swapchain#readme",
  "devDependencies": {
    "@types/crypto-js": "^3.1.45",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "bip174": "^1.0.1",
    "bitcoinjs-lib": "^5.1.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsdoc": "^24.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fetch-mock-jest": "^1.3.0",
    "husky": "^4.2.5",
    "jest": "^25.5.1",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "standard": "^14.3.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "typedoc": "^0.17.6",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3",
    "varuint-bitcoin": "^1.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest"
    }
  },
  "lint-staged": {
    "**/*.{json,md, yml}": [
      "npm run fmt"
    ],
    "**/*.{ts,js}": [
      "npm run fmt"
    ]
  },
  "dependencies": {
    "bitsharesjs": "^3.1.1",
    "bitcoinjs-lib": "^5.1.7",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.2.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.0"
  }
}
